/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 全局样式 */
page {
  --weui-BTN-DEFAULT-BG: #f2f2f2;
  --weui-BTN-DEFAULT-COLOR: #007BFF;
  --weui-BTN-DEFAULT-ACTIVE-BG: #dedede;
  --weui-BTN-PRIMARY-BG: #0062FF;
  --weui-BTN-PRIMARY-COLOR: #fff;
  --weui-BTN-PRIMARY-ACTIVE-BG: #0056e0;
} 

/* 移除 @font-face 声明，改用系统字体 */
.title {
  font-family: -apple-system-font, "PingFang SC", sans-serif;
}

.subtitle {
  font-family: "PingFang SC", "Helvetica Neue", sans-serif;
} 
