page {
  background-color: #f7f7f7;
}

.page__hd {
  padding: 40rpx 32rpx 30rpx;
  background: #fff;
}

.page__title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.page__desc {
  font-size: 28rpx;
  color: #888;
}

.expert-list {
  padding: 16rpx;
}

.weui-panel {
  margin-bottom: 16rpx;
  border-radius: 8rpx;
}

.expert-card {
  display: flex;
  padding: 24rpx;
}

.expert-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.expert-info {
  flex: 1;
}

.expert-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.expert-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.expert-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 22rpx;
  color: #0062FF;
  background: rgba(0, 98, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 8rpx;
}

.expert-specialties {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.expert-stats {
  font-size: 24rpx;
  color: #888;
}

.divider {
  margin: 0 12rpx;
  color: #ddd;
}

.button-sp-area {
  display: flex;
  justify-content: flex-end;
  padding: 24rpx;
  border-top: 1rpx solid #eee;
}

.weui-btn {
  margin: 0 !important;
  width: 180rpx !important;
  font-size: 28rpx !important;
  height: 72rpx !important;
  line-height: 72rpx !important;
  border-radius: 36rpx !important;
}

.weui-btn_default {
  margin-right: 16rpx !important;
  border-color: #0062FF !important;
  color: #0062FF !important;
}

.weui-btn_primary {
  background: #0062FF !important;
} 
