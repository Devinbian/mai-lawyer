<view class="page">
  <view class="page__hd">
    <view class="page__title">精选专家</view>
    <view class="page__desc">平台严选好专家</view>
  </view>

  <view class="page__bd">
    <view class="expert-list">
      <view class="weui-panel" 
        wx:for="{{experts}}" 
        wx:key="id"
        bindtap="goToExpertDetail"
        data-id="{{item.id}}"
      >
        <view class="weui-panel__bd">
          <view class="expert-card">
            <image class="expert-avatar" src="{{item.avatar}}" />
            <view class="expert-info">
              <view class="expert-header">
                <text class="expert-name">{{item.name}}</text>
                <view class="expert-tags">
                  <text class="tag" wx:for="{{item.tags}}" wx:key="*this">{{item}}</text>
                </view>
              </view>
              <view class="expert-specialties">擅长：{{item.specialties}}</view>
              <view class="expert-stats">
                <text>执业{{item.years}}年</text>
                <text class="divider">|</text>
                <text>咨询{{item.consultCount}}人</text>
                <text class="divider">|</text>
                <text>评分{{item.rating}}</text>
              </view>
            </view>
          </view>
          <view class="weui-panel__ft">
            <view class="button-sp-area">
              <button 
                class="weui-btn weui-btn_default"
                catchtap="handlePhoneConsult"
                data-phone="{{item.phone}}"
              >电话咨询</button>
              <button 
                class="weui-btn weui-btn_primary"
                catchtap="handleOnlineConsult"
                data-id="{{item.id}}"
              >在线咨询</button>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view> 
