/* 顶部固定区域 */
.container-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;  /* 恢复高度 */
  z-index: 1;  /* 降低层级，作为背景 */
}

.container-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.container {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Banner区域 */
.banner {
  position: relative;
  display: flex;
  align-items: flex-start;
  padding: 0 32rpx;
  z-index: 160;
}

.banner-title {
  width: 703rpx;  /* 使用原图宽度 */
  height: 248rpx;  /* 使用原图高度 */
  display: block;
  margin-top: -30rpx;
  image-rendering: -webkit-optimize-contrast;  /* 优化图片渲染 */
  transform: translateZ(0);  /* 开启GPU加速 */
}

/* 聊天区域 */
.chat-area {
  position: fixed;
  left: 0;
  right: 0;
  top: 360rpx;
  bottom: 0;
  width: 100%;
  z-index: 150;
  display: flex;
  flex-direction: column;
}

.chat-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* 防止内容溢出 */
}

.chat-bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 360rpx;
  bottom: 0;
  width: 100%;
  z-index: 1;
  pointer-events: none;
}

.chat-content {
  position: relative;
  flex: 1;
  z-index: 2;
  overflow-y: scroll;
  padding-bottom: 140rpx; /* 增加底部padding */
  -webkit-overflow-scrolling: touch;
  padding-top: 38rpx;
  overscroll-behavior: contain;
}

.chat-content.keyboard-show {
  padding-bottom: 200rpx;
}

/* 指导提示样式 */
.guide-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
  padding-left: 32rpx;
  padding-top: -20rpx;
}

.guide-list {
  padding: 0 32rpx;
}

.guide-item {
  margin-bottom: 20rpx;
}

.guide-message {
  display: inline-block;
  background: #fff;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 0;  /* 左下角直角，其他圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 输入框区域 */
.input-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  z-index: 999;
  transition: all 0.3s ease;
}

.input-box {
  flex: 1;
  border-radius: 36rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: flex-start;
}

.chat-input {
  width: 100%;
  min-height: 72rpx;
  max-height: 160rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  color: #333333;
  box-shadow: 0px 0px 8px 0px rgba(167,178,190,0.1);
  border-radius: 4px 4px 4px 4px;
  border: 1px solid #D1E3FD;
}

.input-placeholder {
  color: #999999;
  font-size: 28rpx;
}

/* 重置按钮的默认样式 */
.send-btn {
  padding: 0;
  width: 90rpx !important;
  height: 90rpx !important;
  min-height: 0;
  margin: 0;
  background: #0084ff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.send-btn::after {
  border: none;
}

.send-icon {
  width: 90rpx;
  height: 90rpx;
}

/* 聊天消息样式 */
.message-list {
  padding: 32rpx;
  margin-top: 40rpx;
  /* padding-bottom: 150rpx; 增加底部padding */
}

.message-item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  will-change: transform;
  transform: translateZ(0);
  backface-visibility: hidden;
}

.user-message {
  align-items: flex-end;
}

.ai-message {
  align-items: flex-start;
}

.message-header {
  margin-bottom: 8rpx;
}

.message-nickname {
  font-size: 24rpx;
  color: #999;
}

.message-content {
  max-width: 80%;  /* 恢复普通消息的最大宽度 */
  padding: 20rpx 24rpx;  /* 恢复普通消息的内边距 */
  font-size: 28rpx;
  border-radius: 12rpx;
  word-break: break-all;
  will-change: transform;
  transform: translateZ(0);
}

/* 为卡片消息单独设置样式 */
.message-content.has-card {
  max-width: 100%;
  width: 100%;
  padding: 0;
}

.user-message .message-content {
  background: #0084ff;
  color: #fff;
  border-radius: 12rpx 12rpx 0 12rpx;
}

.ai-message .message-content {
  background: #fff;
  color: #333;
  border-radius: 12rpx 12rpx 12rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
}

.thinking-indicator {
  display: inline-flex;
  align-items: center;
  margin-left: 8rpx;
  vertical-align: middle;
}

.thinking-indicator .dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #999;
  border-radius: 50%;
  margin: 0 2rpx;
  animation: thinking 1.4s infinite;
  will-change: transform, opacity;
}

.thinking-indicator .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.thinking-indicator .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes thinking {
  0%, 100% {
    transform: scale(0.3);
    opacity: 0.3;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 消息操作菜单 */
.message-menu {
  position: absolute;
  top: -40rpx;
  background: #4C4C4C;
  border-radius: 8rpx;
  display: none;
  flex-direction: row;
  align-items: center;
  padding: 0 16rpx;
  z-index: 999;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  will-change: transform, opacity;
  transform: translateZ(0);
}

.message-menu.show {
  display: flex;
}

.message-menu::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  border-width: 8rpx;
  border-style: solid;
  border-color: #4C4C4C transparent transparent transparent;
}

.user-message .message-menu::after {
  right: 30rpx;
}

.ai-message .message-menu::after {
  left: 30rpx;
}

.menu-item {
  color: #FFFFFF;
  font-size: 28rpx;
  padding: 16rpx 24rpx;
  position: relative;
  -webkit-tap-highlight-color: transparent;
}

.menu-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.2);
}

.message-item {
  position: relative;
}

/* 卡片消息样式 */
.card-message {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 2rpx solid #FFFFFF;
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx;
  will-change: transform;
  transform: translateZ(0);
}

.card-title {
  font-size: 28rpx;
  color: #666;
  padding: 0 0 24rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid rgba(229, 242, 255, 1);
}

.card-items {
  display: flex;
  flex-direction: column;
  justify-content: center;  /* 垂直居中 */
  min-height: 240rpx;  /* 设置最小高度确保有足够空间 */
}

.card-item {
  display: flex;
  align-items: center;
  padding: 16rpx 16rpx;
  border: 2rpx solid #FFFFFF;
  position: relative;
  -webkit-tap-highlight-color: transparent;
}

.item-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  will-change: transform;
  transform: translateZ(0);
}

.item-text-wrapper {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  background: rgba(243, 244, 246, 1);
  padding: 16rpx 16rpx;
  border-radius: 8rpx;
}

.item-text-highlight {
  color: #0084ff;
}

.item-arrow {
  color: #999;
  margin-left: 4rpx;  /* 减小箭头的左边距 */
}

/* 加载更多样式 */
.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: #999;
  border-radius: 50%;
  margin: 0 6rpx;
  animation: loading 1s infinite;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loading {
  0%, 100% {
    transform: scale(0.5);
    opacity: 0.3;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 优化滚动性能 */
.chat-content {
  -webkit-overflow-scrolling: touch;
  overscroll-behavior: contain;
}

/* 优化图片加载 */
.item-icon {
  will-change: transform;
  transform: translateZ(0);
}

/* 优化动画性能 */
.thinking-indicator .dot {
  will-change: transform, opacity;
}

.message-menu {
  will-change: transform, opacity;
  transform: translateZ(0);
}

/* 优化触摸反馈 */
.card-item {
  -webkit-tap-highlight-color: transparent;
}

.menu-item {
  -webkit-tap-highlight-color: transparent;
}
