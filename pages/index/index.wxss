/* 顶部固定区域 */
.container-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;  /* 恢复高度 */
  z-index: 1;  /* 降低层级，作为背景 */
}

.container-bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.container {
  position: relative;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Banner区域 */
.banner {
  position: relative;  /* 改回相对定位 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-top: -60rpx;  /* 恢复与导航栏的距离 */
  z-index: 160;
}

.banner-text {
  flex: 1;  /* 占据剩余空间 */
  color: #fff;
  padding-right: 10rpx;  /* 与机器人图片保持间距 */
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  font-family: 'Alimama ShuHeiTi', -apple-system-font, sans-serif;
}

.subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  font-family: 'Source Han Sans CN', "PingFang SC", sans-serif;
}

.robot-avatar {
  width: 220rpx;  /* 固定宽度 */
  height: auto;  /* 高度自适应 */
  position: relative;  /* 确保z-index生效 */
  z-index: 161;  /* 比banner更高一层 */
}

/* 聊天区域 */
.chat-area {
  position: fixed;
  left: 0;
  right: 0;
  top: 360rpx;
  bottom: 0;
  width: 100%;
  z-index: 150;
}

.chat-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.chat-bg {
  position: fixed;
  left: 0;
  right: 0;
  top: 360rpx;
  bottom: 0;
  width: 100%;
  z-index: 1;
  pointer-events: none;
}

.chat-content {
  position: relative;
  flex: 1;
  z-index: 2;
  overflow-y: auto;
  padding-bottom: 100rpx; /* 减小底部间距 */
  margin-top: 20rpx;
  -webkit-overflow-scrolling: touch;
}

/* 指导提示样式 */
.guide-title {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 24rpx;
  padding-left: 32rpx;
}

.guide-list {
  padding: 0 32rpx;
}

.guide-item {
  margin-bottom: 20rpx;
}

.guide-message {
  display: inline-block;
  background: #fff;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  color: #333;
  border-radius: 20rpx 20rpx 20rpx 0;  /* 左下角直角，其他圆角 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 输入框区域 */
.input-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  display: flex;
  align-items: center;
  z-index: 999;
}

.input-box {
  flex: 1;
  margin-right: 20rpx;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
}

.chat-input {
  width: 100%;
  height: 100%;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  background: #FFFFFF;
  box-shadow: 0px 0px 8px 0px rgba(167,178,190,0.1);
  border-radius: 4px 4px 4px 4px;
  border: 1px solid #D1E3FD;
}

/* 重置按钮的默认样式 */
.send-btn {
  padding: 0;
  width: 72rpx !important;
  height: 72rpx !important;
  min-height: 0;
  margin: 0;
  background: #0084ff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.send-btn::after {
  border: none;
}

.send-icon {
  width: 72rpx;
  height: 72rpx;
}
