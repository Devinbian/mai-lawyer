/**index.wxss**/
.page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}

.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin-bottom: 120rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
  position: relative;
}

/* 顶部背景图 */
.banner-bg {
  position: absolute;
  top: -50rpx;
  left: -8rpx;
  width: 100%;
  height: 100%;
  z-index: 1;  /* 在内容之下 */
  object-fit: cover;  /* 确保图片合适填充 */
}

/* Banner */
.banner {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 100;
  padding: 20rpx 32rpx;
  background: #007bff;
  display: flex;
  align-items: center;
  height: 176rpx;
  overflow: hidden;
}

.banner-text {
  position: relative;
  z-index: 2;  /* 确保在背景图之上 */
  flex: 1;
}

.title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #fff;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.robot-avatar {
  position: relative;
  z-index: 2;  /* 确保在背景图之上 */
  width: 120rpx;
  height: 120rpx;
  margin-left: 32rpx;
}

/* 主内容区域 - 可滚动 */
.main-content {
  flex: 1;
  position: relative;
  overflow-y: auto;
}

.bg-image {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.content-wrapper {
  position: relative;
  z-index: 2;
  padding: 0;
}

.tips {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #1890ff;
  margin-bottom: 10rpx;
}

/* 聊天区域 */
.chat-container {
  flex: 1;
  padding: 20rpx;
  margin: 16rpx;
  background: #fff;
  border-radius: 8rpx;
}

.message {
  display: flex;
  margin-bottom: 24rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 8rpx;
}

.content {
  max-width: 70%;
  padding: 20rpx;
  margin: 0 16rpx;
  border-radius: 4rpx;
  font-size: 28rpx;
  line-height: 1.4;
}

.message.ai .content {
  background: #f7f7f7;
  color: #333;
}

.message.user .content {
  background: #0062FF;
  color: #fff;
}

/* 输入框 - 固定在底部 */
.input-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 24rpx 16rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.weui-flex {
  display: flex;
  align-items: center;
}

.weui-input {
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 36rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.send-btn {
  margin-left: 16rpx !important;
  height: 72rpx !important;
  padding: 0 32rpx !important;
  font-size: 28rpx !important;
  border-radius: 36rpx !important;
  background: #0062FF !important;
}

.page-content {
  padding-top: calc(44px + env(safe-area-inset-top)); /* 导航栏高度 + 状态栏高度 */
}
