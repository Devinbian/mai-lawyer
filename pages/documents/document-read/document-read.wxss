page {
  height: 100vh;
  background: #FFFFFF;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
  position: relative;
}

.content {
  position: absolute;
  top: 180rpx;
  left: 0;
  right: 0;
  bottom: 180rpx;
  background: #FFFFFF;
}

web-view {
  width: 100%;
  height: 100% !important;
}

.loading-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28rpx;
  color: #999;
}

.bottom-bar {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.collect-btn {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.collect-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.collect-btn text {
  font-size: 24rpx;
  color: #333333;
}

.download-btn {
  background: #3B7CFF;
  border-radius: 8rpx;
  padding: 8rpx 60rpx;
}

.download-btn text {
  font-size: 32rpx;
  color: #FFFFFF;
}