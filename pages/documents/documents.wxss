.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
  overflow: hidden;
}

.platform-title {
  position: fixed;
  top: 170rpx;  /* 状态栏+导航栏的高度 */
  left: 0;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  border: #FFFFFF solid 1px;
  box-shadow: 0 2rpx 12rpx rgba(255, 255, 255, 0.05);
  background: #FFFFFF;
  z-index: 10;
}

.title-avatar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.title-name {
  position: absolute;
  top: 50%;
  left: 30rpx;
  transform: translateY(-50%);
  height: 52rpx;
  width: auto;
  z-index: 1;
  image-rendering: -webkit-optimize-contrast;
}

.documents-grid {
  position: fixed;
  top: 270rpx;
  left: 0;
  right: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  display: grid;
  grid-template-columns: repeat(3, 188rpx);
  column-gap: 40rpx;
  row-gap: 20rpx;
  justify-content: center;
  box-sizing: border-box;
  overflow-y: auto;
  background: #F5F7FA;
}

.doc-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.doc-item {
  position: relative;
  width: 180rpx;
  height: 240rpx;
  background: linear-gradient(to top, #D3E1FC 0%, #ECF3FF 100%);
  box-shadow: 0px 0px 8px 0px rgba(167,178,190,0.15);
  border-radius: 8rpx;
  overflow: hidden;
  border: 1px solid #FFFFFF;
}

.doc-content {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  z-index: 2;
}

.doc-icon {
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 240rpx;
  z-index: 1;
}

.doc-info {
  position: relative;
  z-index: 2;
}

.doc-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bolder;
}

.doc-desc {
  font-size: 20rpx;
  color: #6F737C;
  margin-top: 4rpx;
}

.doc-bottom {
  margin-top: 8rpx;
  text-align: left;
  width: 100%;
}

.bottom-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: bolder;
  margin-bottom: 4rpx;
}

.bottom-count {
  font-size: 24rpx;
  color: #6F737C;
} 