.login-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-img {
  width: 400rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.agreement {
  margin-bottom: 60rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
}

.link {
  font-size: 26rpx;
  color: #1890ff;
}

.login-buttons {
  width: 100%;
}

.wechat-btn {
  margin-bottom: 30rpx;
  background: #1890ff;
}

.phone-btn {
  color: #666;
  background: #f5f5f5;
} 
