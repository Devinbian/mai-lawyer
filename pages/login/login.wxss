/* 容器样式 */
.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.content {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 60rpx;
  margin-top: 200rpx; /* 向上偏移，使内容更居中 */
}

.login-form {
  width: 100%;
  max-width: 600rpx;
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 48rpx; /* 增加元素之间的间距 */
}

/* 登录按钮样式 */
.weui-btn {
  width: 100% !important;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: normal;
  background: #007BFF !important;
  border-radius: 8rpx;
}

/* 协议提示文本样式 */
.agreement-notice {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 20rpx; /* 增加两侧内边距 */
}

/* 自定义checkbox样式 */
.checkbox {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #CCCCCC;
  margin-right: 12rpx;
  position: relative;
  flex-shrink: 0;
  transition: all 0.3s;
}

.checkbox.checked {
  background: #0084ff;
  border-color: #0084ff;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background: url("data:image/svg+xml,%3Csvg t='1709126400000' class='icon' viewBox='0 0 1024 1024' version='1.1' xmlns='http://www.w3.org/2000/svg' p-id='4251' width='32' height='32'%3E%3Cpath d='M384 691.2L204.8 512l-59.733333 59.733333L384 810.666667l512-512-59.733333-59.733334z' fill='%23ffffff' p-id='4252'%3E%3C/path%3E%3C/svg%3E") no-repeat center center;
  background-size: contain;
}

.link {
  color: #0084ff;
  display: inline;
}

.login-container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
}

.title-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-img {
  width: 400rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.agreement {
  margin-bottom: 60rpx;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
}

.phone-btn {
  color: #666;
  background: #f5f5f5;
} 
