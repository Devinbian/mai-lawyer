<view class="container">
  <!-- 用户信息 -->
  <view class="user-info" bindtap="handleEditProfile">
    <image class="avatar" src="{{userInfo.avatarUrl}}" />
    <view class="info-right">
      <text class="nickname">{{userInfo.nickName}}</text>
      <text class="phone">{{userInfo.phone || '未绑定手机号'}}</text>
    </view>
    <view class="edit-btn">编辑</view>
  </view>

  <!-- 菜单列表 -->
  <view class="menu-section" wx:for="{{menuList}}" wx:key="title">
    <view class="section-title">{{item.title}}</view>
    <view class="menu-grid">
      <view 
        class="menu-item" 
        wx:for="{{item.items}}" 
        wx:key="text"
        wx:for-item="subItem"
        bindtap="handleMenuClick"
        data-text="{{subItem.text}}"
      >
        <view class="item-content">
          <image class="item-icon" src="{{subItem.icon}}" />
          <text class="item-text">{{subItem.text}}</text>
          <view class="badge" wx:if="{{subItem.badge > 0}}">{{subItem.badge}}</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 设置列表 -->
  <view class="setting-list">
    <view 
      class="setting-item"
      wx:for="{{settingList}}"
      wx:key="text"
      bindtap="handleSettingClick"
      data-text="{{item.text}}"
    >
      <view class="item-left">
        <image class="item-icon" src="{{item.icon}}" />
        <text class="item-text">{{item.text}}</text>
      </view>
      <image class="arrow" src="/assets/images/arrow-right.png" />
    </view>
  </view>

  <!-- 退出登录 -->
  <button class="logout-btn" bindtap="handleLogout">退出登录</button>
</view> 
