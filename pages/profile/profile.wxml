<view class="container">
  <!-- 导航栏 -->
  <main-nav></main-nav>

  <!-- 登录注册区域 -->
  <view class="login-section" bindtap="handleLogin">
    <image class="login-bg" src="/static/images/profile/banner@2x.png" mode="widthFix" />
    <view class="login-content">
      <view class="avatar-wrap">
        <image class="avatar" src="{{userInfo.avatarUrl || '/static/images/profile/default-avatar@2x.png'}}" />
      </view>
      <view class="login-info">
        <view class="login-text">{{isLogin ? userInfo.nickName : '登录注册'}}</view>
        <view class="login-desc">{{isLogin ? '' : '登录体验更多功能'}}</view>
      </view>
    </view>
  </view>

  <!-- 我的订单 -->
  <view class="card order-card">
    <view class="card-title">我的订单</view>
    <view class="order-list">
      <view class="order-item" bindtap="handleOrderTap" data-type="wait-pay">
        <image class="order-icon" src="/static/images/profile/wait-pay@2x.png" />
        <text>待支付</text>
      </view>
      <view class="order-item" bindtap="handleOrderTap" data-type="paid">
        <image class="order-icon" src="/static/images/profile/paid@2x.png" />
        <text>已支付</text>
      </view>
      <view class="order-item" bindtap="handleOrderTap" data-type="refund">
        <image class="order-icon" src="/static/images/profile/refund@2x.png" />
        <text>已退款</text>
      </view>
      <view class="order-item" bindtap="handleOrderTap" data-type="all">
        <image class="order-icon" src="/static/images/profile/all@2x.png" />
        <text>全部</text>
      </view>
    </view>
  </view>

  <!-- 我的内容 -->
  <view class="card content-card">
    <view class="card-title">我的内容</view>
    <view class="content-list">
      <view class="content-item" bindtap="handleContentTap" data-type="favorite">
        <image class="content-icon" src="/static/images/profile/favorite@2x.png" />
        <text>我的收藏</text>
      </view>
      <view class="content-item" bindtap="handleContentTap" data-type="download">
        <image class="content-icon" src="/static/images/profile/download@2x.png" />
        <text>下载记录</text>
      </view>
      <view class="content-item" bindtap="handleContentTap" data-type="history">
        <image class="content-icon" src="/static/images/profile/history@2x.png" />
        <text>咨询历史</text>
      </view>
    </view>
  </view>

  <!-- 底部功能区 -->
  <view class="bottom-section">
    <view class="function-item" bindtap="handleFunctionTap" data-type="help">
      <image class="function-icon" src="/static/images/profile/help@2x.png" />
      <text>帮助反馈</text>
      <image class="arrow" src="/static/images/profile/arrow-right@2x.png" />
    </view>
    <view class="function-item" bindtap="handleFunctionTap" data-type="contact">
      <image class="function-icon" src="/static/images/profile/contact@2x.png" />
      <text>联系我们</text>
      <image class="arrow" src="/static/images/profile/arrow-right@2x.png" />
    </view>
    <view class="function-item" bindtap="handleFunctionTap" data-type="about">
      <image class="function-icon" src="/static/images/profile/about@2x.png" />
      <text>关于我们</text>
      <image class="arrow" src="/static/images/profile/arrow-right@2x.png" />
    </view>
    <view class="function-item" bindtap="handleFunctionTap" data-type="logout" wx:if="{{isLogin}}">
      <image class="function-icon" src="/static/images/profile/logout@2x.png" />
      <text>退出登录</text>
      <image class="arrow" src="/static/images/profile/arrow-right@2x.png" />
    </view>
  </view>
</view>
