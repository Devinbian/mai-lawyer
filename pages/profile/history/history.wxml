<view class="container">
  <bg-titlecenter-nav title="咨询历史"></bg-titlecenter-nav>

  <!-- 咨询列表 -->
  <scroll-view 
    class="history-content"
    scroll-y="true"
    bindscrolltolower="loadMore"
    refresher-enabled="{{true}}"
    refresher-triggered="{{isRefreshing}}"
    bindrefresherrefresh="onRefresh"
    enhanced="true"
    show-scrollbar="{{false}}"
    refresher-default-style="none"
    refresher-background="#F6F7F9"
  >
    <view wx:if="{{isRefreshing}}" class="refresh-loading">
      <view class="loading-icon"></view>
      <text>刷新中...</text>
    </view>

    <view class="history-list" wx:if="{{historyList.length > 0}}">
      <view class="history-item" wx:for="{{historyList}}" wx:key="id" bindtap="handleItemClick" data-id="{{item.id}}">
        <view class="expert-avatar">
          <image class="avatar" src="{{item.avatar}}" mode="aspectFill"/>
          <view class="online-dot" wx:if="{{item.online}}"></view>
        </view>
        <view class="chat-info">
          <view class="chat-header">
            <text class="expert-name">{{item.name}}</text>
            <text class="chat-time">{{item.time}}</text>
          </view>
          <view class="chat-content">{{item.lastMessage}}</view>
        </view>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:elif="{{!isLoading && historyList.length === 0}}">
      <image class="empty-icon" src="{{imgUrls.empty}}" mode="aspectFit"/>
      <text class="empty-text">暂无咨询记录</text>
    </view>

    <!-- 加载更多 -->
    <view class="loading-more" wx:if="{{isLoading && historyList.length > 0}}">
      <text>加载中...</text>
    </view>
    <view class="no-more" wx:if="{{!hasMore && historyList.length > 0}}">
      <text>没有更多了</text>
    </view>
  </scroll-view>
</view> 
