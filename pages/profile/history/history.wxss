.container {
  height: 100vh;
  background: #F5F7FA;
  padding-top: 180rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
}

/* 咨询列表样式 */
.history-content {
  height: calc(100vh - 180rpx);
}

.history-list {
  padding: 20rpx 20rpx;
}

.history-item {
  display: flex;
  align-items: flex-start;
  background: #FFFFFF;
  padding: 24rpx;
  margin-bottom: 20rpx;
  /* border-bottom: 1rpx solid #F2F3F5; */
}

.expert-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  position: relative;
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.online-dot {
  position: absolute;
  right: 0;
  top: 0;
  width: 16rpx;
  height: 16rpx;
  background: #52C41A;
  border: 2rpx solid #FFFFFF;
  border-radius: 50%;
}

.chat-info {
  flex: 1;
  overflow: hidden;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.expert-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.chat-time {
  font-size: 24rpx;
  color: #AAAAAA;
}

.chat-content {
  font-size: 26rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999999;
} 