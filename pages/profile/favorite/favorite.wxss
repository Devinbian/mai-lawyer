.container {
  height: 100vh;
  background: #F5F7FA;
  padding-top: 180rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
}

.favorite-content {
  height: calc(100vh - 180rpx);
  position: relative;
}

.favorite-list {
  padding: 20rpx;
}

.favorite-item {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.doc-title {
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999999;
}

/* 下拉刷新 */
.refresh-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  background: #F6F7F9;
  z-index: 2;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  border: 4rpx solid #4768F3;
  border-radius: 50%;
  border-top-color: transparent;
  animation: loading 0.8s linear infinite;
}

@keyframes loading {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.refresh-loading text {
  font-size: 28rpx;
  color: #666666;
} 
