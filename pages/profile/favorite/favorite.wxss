.container {
  height: 100vh;
  background: #F5F7FA;
  padding-top: 180rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
}

.favorite-content {
  height: calc(100vh - 180rpx);
}

.favorite-list {
  padding: 20rpx;
}

.favorite-item {
  display: flex;
  align-items: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.doc-icon-wrap {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.doc-icon {
  width: 100%;
  height: 100%;
}

.doc-info {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
}

.doc-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.doc-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.doc-meta {
  font-size: 24rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.doc-date {
  margin-right: 20rpx;
}

.doc-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  width: 48rpx;
  height: 48rpx;
  padding: 10rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
  font-size: 24rpx;
  color: #999999;
} 