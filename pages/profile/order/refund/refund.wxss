.container {
  min-height: 100vh;
  padding-top: 180rpx;
  background-color: #F6F7F9;
  box-sizing: border-box;
}

/* 订单信息 */
.order-info {
  background: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
  width: 95%;
  box-sizing: border-box;
}

.service-type {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.type-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.service-type text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.lawyer-info {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.title {
  font-size: 24rpx;
  color: #999;
}

.order-detail {
  padding-top: 20rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-item .label {
  color: #999;
  width: 140rpx;
}

.detail-item .value {
  color: #333;
  flex: 1;
}

/* 退款说明 */
.refund-section {
  background: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
  width: 95%;
  box-sizing: border-box;
}

.refund-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.refund-amount {
  font-size: 26rpx;
  color: #999;
}

.refund-amount .price {
  color: #FF4D4F;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 8rpx;
}

.refund-reason {
  width: 100%;
  height: 240rpx;
  background: #F6F7F9;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  line-height: 36rpx;
}

.placeholder {
  color: #999;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 上传凭证 */
.upload-section {
  background: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
  width: 95%;
  box-sizing: border-box;
}

.upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.upload-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: #F6F7F9;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.upload-btn text:first-child {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-btn .tip {
  font-size: 24rpx;
}

/* 提交按钮 */
.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
  height: 88rpx;
  background: #4768F3;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
} 