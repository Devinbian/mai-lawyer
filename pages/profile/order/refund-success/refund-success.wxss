.container {
  min-height: 100vh;
  background-color: #F3F4F6;
  box-sizing: border-box;
  padding: 0;
  position: relative;
}

.progress-section {
  position: absolute;
  top: 175rpx;
  left: 0;
  width: 100%;
  height: 138rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.banner-img {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.progress-bar {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: left;
  padding: 0 260rpx 0 80rpx;
  width: 100%;
  height: auto;
  box-sizing: border-box;
}

.progress-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: left;
  z-index: 2;
  height: 80rpx;
}


.progress-line {
  height: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  flex: 1;
  margin: 0 200rpx 0 10rpx;
  position: relative;
  top: -26rpx;
}

.progress-line.active {
  background: #007BFF;
}

.progress-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 4rpx;
  position: relative;
}

.progress-dot.active {
  background: #007BFF;
}

.progress-dot.check {
  background: #007BFF;
  width: 40rpx;
  height: 40rpx;
  margin-top: 0;
  margin-left: -340rpx;
  position: relative;
}

.check-icon {
  width: 14rpx;
  height: 10rpx;
  border: 2rpx solid #fff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
  margin-top: -4rpx;
}

.progress-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 16rpx;
  white-space: nowrap;
  position: absolute;
  bottom: 0;
  left: 10rpx;
  transform: translateX(-50%);
}

.progress-dot.check + .progress-label {
  left: calc(50% - 168rpx);
}

.progress-label.active {
  color: #333333;
}

.success-content {
  position: absolute;
  top: 310rpx;
  left: 0;
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
}

.success-status {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
}

.status-text {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
  margin-bottom: 16rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #00B42A;
  position: relative;
}

.status-dot::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: rgba(0, 180, 42, 0.15);
  box-shadow: 0 0 8rpx rgba(0, 180, 42, 0.3);
}

.status-desc {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 8rpx;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}

.amount {
  font-size: 24rpx;
  color: rgba(44, 145, 255, 1);
  font-weight: bold;
  margin: 0 4rpx;
}

.status-time {
  font-size: 24rpx;
  color: rgba(170, 170, 170, 1);
  padding-left: 20rpx;
}

.order-title {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
  margin: 10rpx 0 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.order-info {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 180rpx;
}

.info-item {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: rgba(102, 102, 102, 1);
}

.info-value {
  color: rgba(51, 51, 51, 1);
  padding-left: 20rpx;
}
