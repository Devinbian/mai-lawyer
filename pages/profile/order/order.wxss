.container {
  min-height: 100vh;
  padding-top: 180rpx;
  background-color: #F6F7F9;
  box-sizing: border-box;
}

/* 订单状态标签 */
.order-tabs {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-bottom: 2rpx solid #E7E7E7;
  padding: 30rpx 0;
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  z-index: 1;
}

.tab-item {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
  position: relative;
  padding: 0 20rpx;
}

.tab-item.active {
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #4768F3;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  margin-top: 100rpx;
  padding: 20rpx;
  height: calc(100vh - 280rpx);
  display: flex;
  flex-direction: column;
}

.order-list-content {
  flex: 1;
  overflow: auto;
}

.order-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

/* 订单类型 */
.order-type {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.type-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.order-type-text {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
} 

.order-status {
  margin-left: auto;
  font-size: 24rpx;
  color: rgba(0, 123, 255, 1);
}

.order-status.pending {
  color: #4768F3;
}

.order-status.paid {
  color: #999;
}

.order-status.refunding {
  color: rgba(243, 78, 78, 1);
}

.order-status.refunded {
  color: #999;
}

/* 订单信息 */
.order-info {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  line-height: 36rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  color: rgba(102, 102, 102, 1);
  width: 140rpx;
}

.info-item .value {
  color: rgba(51, 51, 51, 1);
  flex: 1;
}

.info-item .value.price {
  color: rgba(51, 51, 51, 1);
  font-size: 32rpx;
  font-weight: bold;
}

/* 订单操作 */
.order-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F3F4F6;
}

.dropdown {
  position: relative;
  margin-right: auto;
}

.more {
  font-size: 28rpx;
  color: #666666;
}

.dropdown-menu {
  position: absolute;
  top: 100%;
  left: 0;
  background: #FFFFFF;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  border-radius: 8rpx;
  min-width: 160rpx;
  z-index: 100;
  display: none;
  margin-top: 10rpx;
}

.dropdown-menu::before {
  content: '';
  position: absolute;
  top: -16rpx;
  left: 20rpx;
  border: 8rpx solid transparent;
  border-bottom-color: #FFFFFF;
  filter: drop-shadow(0 -2rpx 2rpx rgba(0, 0, 0, 0.1));
}

.dropdown-menu.show {
  display: block;
}

.dropdown-item {
  padding: 20rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
}

.dropdown-item:active {
  background-color: #F6F7F9;
}

.action-btn {
  padding: 12rpx 40rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  height: 64rpx;
  line-height: 64rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.cancel {
  color: #666;
  background: #fff;
  border: 2rpx solid #EDEEF0;
}

.action-btn.pay {
  color: #fff;
  background: #4768F3;
  border: none;
}

.action-btn.refund-detail {
  color: #FF4D4F;
  background: #fff;
  border: 1rpx solid #FF4D4F;
}

.action-btn.delete {
  margin-right: auto;
  margin-left: 0;
  color: #666;
  background: #fff;
  border: none;
  padding: 0;
}

.action-btn.refund {
  color: #666;
  background: #fff;
  border: 2rpx solid #EDEEF0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 160rpx;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.safe-area-inset-bottom {
  height: constant(safe-area-inset-bottom);
  height: env(safe-area-inset-bottom);
  background-color: #F6F7F9;
} 
