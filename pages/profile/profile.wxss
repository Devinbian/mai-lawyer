.container {
  width: 100%;
  min-height: 100vh;
  height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
}

.content {
  position: absolute;
  top: 376rpx;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 登录注册区域 */
.login-section {
  position: fixed;
  top: 200rpx;
  left: 20rpx;
  right: 20rpx;
  width: calc(100% - 40rpx);
  height: 180rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  overflow: hidden;
  z-index: 10;
}

.login-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.login-content {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  z-index: 1;
  box-sizing: border-box;
}

.avatar-wrap {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.avatar {
  width: 48rpx;
  height: 48rpx;
}

.avatar-login {
  width: 100% !important;
  height: 100% !important;
  object-fit: cover;
}

.login-info {
  flex: 1;
}

.login-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.login-desc {
  font-size: 24rpx;
  color: #999999;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

/* 订单区域 */
.order-card {
  margin-bottom: 20rpx;
}

.order-list {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.order-item text {
  font-size: 26rpx;
  color: #333333;
}

/* 内容区域 */
.content-list {
  display: flex;
  justify-content: space-between;
}

.content-item {
  display: flex;
  flex-direction: row;  /* 改为水平排列 */
  align-items: center;  /* 垂直居中对齐 */
}

.content-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;  /* 改为右边距 */
}

.content-item text {
  font-size: 26rpx;
  color: #333333;
}

/* 底部功能区 */
.bottom-section {
  background: #FFFFFF;
  width: 100%;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.function-item,
button.function-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  margin: 0 20rpx;  /* 修改左右间距为20rpx */
  border-bottom: 1rpx solid #F5F5F5;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.function-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 退出登录按钮特殊样式 */
.function-item[data-type="logout"] {
  margin: 20rpx 20rpx;  /* 统一间距 */
  color: #FF3B30;
}

.function-item[data-type="logout"] text {
  color: #FF3B30;
} button.function-item {
  width: 100%;
  text-align: left;
  border-radius: 0;
  font-weight: normal;
  line-height: inherit;
  margin: 0;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #f5f5f5;
}

button.function-item::after {
  border: none;
}

button.function-item .function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

button.function-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

button.function-item .arrow {
  width: 32rpx;
  height: 32rpx;
}
