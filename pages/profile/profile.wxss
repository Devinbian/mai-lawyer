.container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
  overflow: hidden;
}

/* 登录注册区域 */
.login-section {
  position: relative;
  width: calc(100% - 40rpx);
  margin: -40rpx 20rpx -10rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.login-bg {
  width: 100%;
  height: auto;
  display: block;
}

.login-content {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
  width: 100%;
  padding: 32rpx;
  display: flex;
  align-items: center;
}

.avatar-wrap {
  width: 92rpx;
  height: 92rpx;
  border-radius: 46rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.avatar {
  width: 42rpx;
  height: 52rpx;
}

.login-info {
  flex: 1;
}

.login-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.login-desc {
  font-size: 24rpx;
  color: #666666;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 90rpx 20rpx -100rpx;  /* 增加负margin */
  padding: 32rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

/* 订单区域 */
.order-card {
  margin-top: 0;  /* 移除额外的margin-top */
}

.order-list {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.order-item text {
  font-size: 26rpx;
  color: #333333;
}

/* 内容区域 */
.content-list {
  display: flex;
  justify-content: space-between;
}

.content-item {
  display: flex;
  flex-direction: row;  /* 改为水平排列 */
  align-items: center;  /* 垂直居中对齐 */
}

.content-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;  /* 改为右边距 */
}

.content-item text {
  font-size: 26rpx;
  color: #333333;
}

/* 底部功能区 */
.bottom-section {
  background: #FFFFFF;
  width: calc(100% - 40rpx);
  margin: 90rpx 20rpx 20rpx;  /* 调整上边距 */
  border-radius: 16rpx;
  box-sizing: border-box;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  margin: 0 20rpx;  /* 修改左右间距为20rpx */
  border-bottom: 1rpx solid #F5F5F5;
}

.function-item:last-child {
  border-bottom: none;
}

.function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.function-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 退出登录按钮特殊样式 */
.function-item[data-type="logout"] {
  margin-top: 10rpx;  /* 调整为10rpx */
  color: #FF3B30;  /* 使用警示性的红色 */
}

.function-item[data-type="logout"] text {
  color: #FF3B30;
} 