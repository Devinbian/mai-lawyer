.container {
  width: 100%;
  height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
  position: relative;
}

.content {
  position: absolute;
  top: 160rpx;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.content::-webkit-scrollbar {
  display: none;
}

/* 登录注册区域 */
.login-section {
  position: relative;
  width: 100%;
  height: 180rpx;
  border-radius: 16rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  overflow: hidden;
  margin: 20rpx 0;
}

.login-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.login-content {
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  z-index: 1;
  box-sizing: border-box;
}

.avatar-wrap {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  overflow: hidden;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 2rpx solid rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 56rpx;
  height: 56rpx;
}

.avatar-login {
  width: 100% !important;
  height: 100% !important;
  object-fit: cover;
}

.login-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.login-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.login-desc {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
}

/* 订单区域 */
.order-card {
  margin-bottom: 20rpx;
}

.order-list {
  display: flex;
  justify-content: space-between;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.order-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.order-item text {
  font-size: 26rpx;
  color: #333333;
  text-align: center;
}

/* 内容区域 */
.content-list {
  display: flex;
  justify-content: space-between;
}

.content-item {
  display: flex;
  flex-direction: row;  /* 改为水平排列 */
  align-items: center;  /* 垂直居中对齐 */
}

.content-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;  /* 改为右边距 */
}

.content-item text {
  font-size: 26rpx;
  color: #333333;
}

/* 底部功能区统一样式 */
.bottom-section {
  background: #FFFFFF;
  width: 100%;
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  padding: 0 32rpx;
}

/* 统一功能项样式 */
.function-item,
button.function-item {
  width: 100%;
  margin: 0;
  padding: 32rpx 0;
  background: #fff;
  border-radius: 0;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  text-align: left;
  font-weight: normal;
  line-height: 1;
  box-sizing: border-box;
}

.function-item:last-child,
button.function-item:last-child {
  border-bottom: none;
}

/* 移除按钮默认样式 */
button.function-item::after {
  border: none;
}

/* 统一图标样式 */
.function-item .function-icon,
button.function-item .function-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

/* 统一文本样式 */
.function-item text,
button.function-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 统一箭头样式 */
.function-item .arrow,
button.function-item .arrow {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

