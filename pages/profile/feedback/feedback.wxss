.container {
  min-height: 100vh;
  background: #fff;
  padding-top: 180rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.feedback-content {
  flex: 1;
  padding: 0 60rpx;
  padding-bottom: 40rpx;
}

/* 通用区块样式 */
.section {
  background: #FFFFFF;
  margin-bottom: 20rpx;
  width: 100vw;
  box-sizing: border-box;
}

.section-inner, .form-inner {
  padding: 10rpx 40rpx;
}

/* 反馈类型标签 */
.feedback-type {
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  justify-content: space-between;
}

.type-title {
  font-size: 32rpx;
  color: #1D2129;
  font-weight: bold;
}

.feedback-tabs {
  display: flex;
  justify-content: flex-end;
}

.tab-item {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #86909C;
  background: #F5F7FA;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.tab-item:first-child {
  margin-left: 0;
}

.tab-item.active {
  color: #007BFF;
  background: rgba(230, 242, 255, 1);
}

/* 反馈表单 */
.feedback-input {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #1D2129;
  background: #F5F7FA;
  border-radius: 8rpx;
}

.placeholder {
  color: #86909C;
}

.word-count {
  position: relative;
  text-align: right;
  font-size: 24rpx;
  color: #86909C;
  margin-top: -46rpx;
  margin-right: 20rpx;
  z-index: 100;
}

/* 图片上传 */
.upload-title {
  font-size: 28rpx;
  color: #1D2129;
  margin-bottom: 24rpx;
  font-weight: bold;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.upload-item {
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.upload-img {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: #F5F7FA;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.plus-icon {
  width: 48rpx;
  height: 48rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #86909C;
}

/* 联系方式 */
.contact-title {
  font-size: 28rpx;
  color: #1D2129;
  margin-bottom: 24rpx;
  font-weight: bold;
}

.contact-input {
  width: 100%;
  height: 88rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #1D2129;
  border-bottom: 2rpx solid #F3F4F6;
}

/* 提交按钮 */
.submit-btn {
  width: 80%;
  margin: 60rpx auto;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #007BFF;
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.submit-btn.disabled {
  background: #CCCCCC;
} 