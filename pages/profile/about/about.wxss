.container {
  height: 100vh;
  padding-top: 180rpx;
  background-color: #fff;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.about-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: calc(100vh - 180rpx);
  box-sizing: border-box;
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  padding: 20rpx 40rpx 300rpx;
  /* padding-bottom: 200rpx; */
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.version {
  font-size: 28rpx;
  color: #999;
}

/* 公司介绍 */
.intro-section {
  margin-bottom: 40rpx;
}

.intro-section .title {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 20rpx;
  font-weight: bold;
}

.intro-section .content {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  background-color: rgba(243, 244, 246, 1);
  padding: 20rpx 20rpx;
  border-radius: 8rpx;
}

/* 联系信息 */
.contact-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border-bottom: 1rpx solid rgba(243, 244, 246, 1);
}

.contact-item .label {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
}

.contact-item .value {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

/* 版权信息 */
.copyright {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  flex-shrink: 0;
} 