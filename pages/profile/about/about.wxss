.container {
  height: 100vh;
  box-sizing: border-box;
  position: fixed;
  top: -140rpx;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.about-content {
  padding: 0 40rpx;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.version {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 0.75);
  font-weight: 500;
}

/* 公司介绍 */
.intro-section {
  margin-bottom: 60rpx;
}

.intro-section .title {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.intro-section .content {
  font-size: 24rpx;
  color: #666666;
  line-height: 40rpx;
  text-align: justify;
  background:#F3F4F6;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
  letter-spacing: 1rpx;
}

/* 联系信息 */
.contact-section {
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* background: #F3F4F6; */
  padding: 24rpx;
  border-radius: 8rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.contact-item .label {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.contact-item .value {
  font-size: 28rpx;
  color: #333333;
}

/* 版权信息 */
.copyright {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(51, 51, 51, 0.75);
  padding: 100rpx 0;
} 