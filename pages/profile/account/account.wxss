.container {
  min-height: 100vh;
  height: 100vh;
  background: #F5F7FA;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  overflow: hidden;
}

.content {
  position: absolute;
  top: 196rpx;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.info-section {
  background: #FFFFFF;
  margin-bottom: 20rpx;
  width: 100%;
  border-radius: 8rpx;
}

/* 性别section的特殊间距 */
.info-section.gender-section {
  margin-top: 60rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 112rpx;
  padding: 0 32rpx;
  position: relative;
}

.info-item.has-border::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #F5F7FA;
}

.label {
  font-size: 28rpx;
  color: #666666;
}

.value-wrap {
  display: flex;
  align-items: center;
}

.value {
  font-size: 28rpx;
  color: #666666;
  margin-right: 16rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.avatar-item {
  height: 112rpx;
  padding: 0 32rpx;
}

.avatar-wrapper {
  margin: 0;
  padding: 0;
  width: 100% !important;
  background: none;
  border: none;
  line-height: normal;
  font-weight: normal;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-wrapper .info-item {
  background: #fff;
}


.avatar-container {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #E9F1FF;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 默认头像样式 */
.avatar-container image[src*="default"] {
  width: 50%;
  height: 50%;
  object-fit: contain;
}

.gender-options {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.gender-option {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.radio-container {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid #CCCCCC;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: relative;
}

.radio-container.checked {
  border-color: #1890FF;
  background: #1890FF;
}

.radio-container.checked::after {
  content: '';
  width: 16rpx;
  height: 8rpx;
  border: 2rpx solid #fff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
  position: absolute;
  top: 8rpx;
  left: 6rpx;
}

.gender-label {
  font-size: 28rpx;
  color: #666666;
}

/* 手机号按钮样式 */
.phone-wrapper {
  margin: 0;
  padding: 0;
  width: 100% !important;
  background: none;
  border: none;
  line-height: normal;
  font-weight: normal;
}

.phone-wrapper::after {
  border: none;
}

.phone-wrapper .info-item {
  background: #fff;
}
