<view class="container">
  <custom-nav title="专家详情"></custom-nav>
  <view class="content">
    <!-- 专家基本信息 -->
    <view class="expert-header">
      <image class="expert-avatar" src="{{expert.avatar}}" />
      <view class="expert-info">
        <view class="expert-name">{{expert.name}}</view>
        <view class="expert-title">{{expert.title}}</view>
        <view class="expert-tags">
          <text class="tag" wx:for="{{expert.tags}}" wx:key="*this">{{item}}</text>
        </view>
      </view>
    </view>

    <!-- 专家简介 -->
    <view class="expert-intro">
      <view class="section-title">执业简介</view>
      <view class="intro-content">{{expert.introduction}}</view>
    </view>

    <!-- 专业领域 -->
    <view class="expert-fields">
      <view class="section-title">专业领域</view>
      <view class="fields-content">
        <view class="field-item" wx:for="{{expert.fields}}" wx:key="*this">
          {{item}}
        </view>
      </view>
    </view>

    <!-- 咨询按钮 -->
    <view class="action-bar">
      <button class="consult-btn" bindtap="handleConsult">立即咨询</button>
    </view>
  </view>
</view> 