<view class="container" wx:if="{{expert}}">
  <!-- 专家信息 -->
  <view class="expert-header">
    <view class="basic-info">
      <image class="avatar" src="{{expert.avatar}}" />
      <view class="info-right">
        <view class="name-title">
          <text class="name">{{expert.name}}</text>
          <text class="title">{{expert.title}}</text>
        </view>
        <view class="stats">
          <view class="stat-item">
            <text class="num">{{expert.followCount}}</text>
            <text class="label">关注</text>
          </view>
          <view class="stat-item">
            <text class="num">{{expert.serviceCount}}</text>
            <text class="label">服务</text>
          </view>
          <view class="stat-item">
            <text class="num">{{expert.years}}年</text>
            <text class="label">从业</text>
          </view>
        </view>
      </view>
      <button 
        class="follow-btn {{isFollowed ? 'followed' : ''}}" 
        bindtap="handleFollow"
      >
        {{isFollowed ? '已关注' : '关注'}}
      </button>
    </view>

    <view class="tags">
      <text class="tag" wx:for="{{expert.tags}}" wx:key="*this">{{item}}</text>
    </view>
  </view>

  <!-- 律师简介 -->
  <view class="section">
    <view class="section-title">律师简介</view>
    <view class="introduction">{{expert.introduction}}</view>
  </view>

  <!-- 服务项目 -->
  <view class="section">
    <view class="section-title">服务项目</view>
    <view class="services">
      <view 
        class="service-item"
        wx:for="{{services}}"
        wx:key="name"
        bindtap="selectService"
        data-index="{{index}}"
      >
        <image class="service-icon" src="{{item.icon}}" />
        <text class="service-name">{{item.name}}</text>
        <text class="service-price">{{item.price}}</text>
      </view>
    </view>
  </view>
</view> 
