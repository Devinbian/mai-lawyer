.container {
  padding: 20rpx;
}

.search-bar {
  margin-bottom: 20rpx;
}

.search-input {
  background: #f5f5f5;
  height: 80rpx;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.doc-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.doc-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.doc-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.doc-price {
  font-size: 28rpx;
  color: #ff4d4f;
}

.doc-summary {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.doc-info {
  display: flex;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.doc-number, .doc-count {
  margin-right: 20rpx;
}

.doc-actions {
  display: flex;
  justify-content: flex-end;
}

.preview-btn, .download-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  font-size: 26rpx;
  margin-left: 20rpx;
  padding: 0;
}

.preview-btn {
  color: #1890ff;
  background: #fff;
  border: 2rpx solid #1890ff;
}

.download-btn {
  color: #fff;
  background: #1890ff;
} 
