/* pages/chat/chat.wxss */
.container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
    overflow: hidden;
    position: relative;
    touch-action: none;
  }
  
  .conversation-container {
    flex: 1;
    width: 100%;
    position: relative;
    margin-top: -200rpx;
    height: calc(100vh - 88rpx + 200rpx);
    overflow: hidden;
  }
  
  .conversation-container :deep(.tui-conversation-list),
  .conversation-container :deep(.scroll-view) {
    overflow-y: auto !important;
    -webkit-overflow-scrolling: touch;
  }
  