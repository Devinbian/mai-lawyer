/* pages/chat/chat.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  overflow: hidden;
  position: relative;
}

.chat-container {
  flex: 1;
  width: 100%;
  position: relative;
  margin-top: -200rpx;
  height: calc(100vh - 88rpx + 200rpx);
}

.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.loading-tip {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 调试信息悬浮样式 */
.debug-info-float {
  position: fixed;
  top: 190rpx;
  left: 0;
  width: 100%;
  z-index: 100;
  padding: 10rpx 20rpx;
  background-color: rgba(248, 248, 248, 0.9);
  border-bottom: 1rpx solid #eee;
  font-size: 24rpx;
  color: #666;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.debug-title {
  font-weight: bold;
  margin-bottom: 5rpx;
}

.debug-item {
  margin: 2rpx 0;
}
