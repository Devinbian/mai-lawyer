/* pages/chat/chat.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  overflow: hidden;
}

.chat-container {
  flex: 1;
  width: 100%;
  position: relative;
  margin-top: -200rpx;
  height: calc(100vh - 88rpx + 200rpx);
}

.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.loading-tip {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}
