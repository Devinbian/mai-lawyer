.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 9999;
}

.nav-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 状态栏背景 */
.status-bar {
  width: 100%;
  position: relative;
}

/* 导航内容区 */
.nav-bar {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: left;
  padding: 0 32rpx;
}

/* 导航标题图片 */
.nav-title {
  height: 44rpx;
  margin-left: -10rpx;  /* 微调左边距，使文字内容对齐 */
  width: auto;
  display: block;
}