.nav-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 9999;
  background: #fff;
}

.nav-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

/* 状态栏背景 */
.status-bar {
  width: 100%;
  position: relative;
}

/* 导航内容区 */
.nav-bar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* 胶囊按钮 */
.capsule-btn {
  position: absolute;
  display: flex;
  align-items: center;
  height: 64rpx;
  border-radius: 32rpx;
  z-index: 1;
  padding: 0 10rpx;
  backdrop-filter: blur(4px);
}

.capsule-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 100%;
  transform: rotateY(-180deg);
}

.icon-back {
  width: 40rpx;
  height: 40rpx;
}

/* 标题区域 */
.nav-title {
  position: absolute;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.main-title {
  color: #000;
  font-size: 36rpx;
  font-weight: bold;
  font-family: PingFangSC-Medium, PingFang SC;
  white-space: nowrap;
  text-align: center;
  padding: 0 220rpx; /* 增加padding，为胶囊按钮留出更多空间 */
}

/* 右侧预留区域 */
.nav-right {
  position: absolute;
  right: 32rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 1;
}

