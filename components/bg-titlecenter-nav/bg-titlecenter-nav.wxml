<view class="nav-container">
  <image class="nav-bg" src="/static/images/nav-bg.png" mode="aspectFill"></image>
  <view class="status-bar" style="height: {{statusBarHeight}}px"></view>
  <view class="nav-bar" style="height: {{navBarHeight}}px">
    <view class="capsule-btn">
      <view class="capsule-item" bindtap="goBack">
        <image class="icon-back" src="/static/images/experts/chevron-left@2x.png" mode="aspectFit"></image>
      </view>
      <view class="capsule-divider"></view>
      <view class="capsule-item" bindtap="handleHome">
        <image class="icon-home" src="/static/images/experts/home@2x.png" mode="aspectFit"></image>
      </view>
    </view>
    <view class="nav-title">
      <text class="main-title">{{title}}</text>
    </view>
    <view class="nav-right"></view>
  </view>
</view> 
